{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "out",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "typeRoots": ["node_modules/@types", "types"]
    },
    "include": [
        "src/**/*", "types/**/*"
    ]
}